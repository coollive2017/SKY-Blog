extends ../layout

append css

block content
  .container
      .ul.list-unstyled
        .page-header
          h2=category
            | 文章列表
          table.table.table-bordered
            thead
              tr
                th(width='30%') 标题
                th 分类 
                th 作者 
                th 发表时间 
                th 被赞 
                th 评论 
                th 状态 
                th 管理 
            tbody
              each article in articles 
                tr
                  td
                    a(href='/article/view/'+article._id, target='_blank')
                      =article.title
                  td
                    a(href='/category/'+article.category.name, target='_blank') 
                      =article.category.name
                  td=article.author.username  
                  td=moment(article.created).format('YYYY-MM-DD HH:mm:ss') 
                  td=article.meta.favorites || 0
                  td=article.comments.length || 0 
                  td=article.published ? '已发布':'待发布'
                  td
                    botton.btn.btn-primary 查看
                    botton.btn.btn-success 编辑
                    botton.btn.btn-danger 删除

      .paging(style='')
        nav(aria-label='Page navigation', style='text-align: center;margin:0 auto;"')
          ul.pagination
            li
              span
                |文章总数：
                =dataTotal
            li
              a(href='#', aria-label='Previous')
                span(aria-hidden='true') « 上一页
            -var pagect = 1
            -var path
            while pagect <= pageCount
              -path = './articles?page=' + pagect
              if(pageNum == pagect)
                li.active
                  a(href=path)= pagect++
              else
                li
                  a(href=path)= pagect++
            li
              a(href='#', aria-label='Next')
                span(aria-hidden='true') 下一页 »
            li
              span
                |总页数：
                =pageCount


